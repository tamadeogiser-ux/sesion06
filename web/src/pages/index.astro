/**
 * P√°gina Principal
 * 
 * Muestra:
 * - B√∫squeda de ubicaci√≥n
 * - Clima actual prominente
 * - Pron√≥stico de 7 d√≠as
 * - Alertas si las hay
 */

import Layout from '../layouts/Layout.astro';
import LocationSearch from '../components/LocationSearch.astro';
import CurrentWeather from '../components/CurrentWeather.astro';
import ForecastCard from '../components/ForecastCard.astro';
import AlertBanner from '../components/AlertBanner.astro';
import HourlyForecast from '../components/HourlyForecast.astro';
import { formatWeatherData, generateFallbackData } from '../utils/weatherMapper';

// Datos por defecto (Valencia Mock Fallback)
const VALENCIA_COORDS = { lat: 39.4699, lon: -0.376 };
let weatherData = generateFallbackData();

// Intento de obtener datos reales del servidor local
try {
  const response = await fetch(`http://localhost:3000/api/weather?lat=${VALENCIA_COORDS.lat}&lon=${VALENCIA_COORDS.lon}&city=Valencia`);
  if (response.ok) {
    const result = await response.json();
    if (result.success && result.data) {
       // Mapear respuesta del backend al formato del frontend
       weatherData = formatWeatherData(result.data);
    }
  }
} catch (e) {
  console.error('Error fetching Valencia weather:', e);
  // Se mantiene el mock
}
---

<Layout 
  title="Valencia - Clima"
  description="Informaci√≥n meteorol√≥gica de Valencia en tiempo real"
>
  <!-- B√∫squeda (Deshabilitada: Solo Valencia) -->
  <section class="hero">
    <div class="hero__content">
      <h1 class="hero__title">Tiempo en Valencia üçä</h1>
      <p class="hero__subtitle">Datos meteorol√≥gicos en tiempo real</p>
      <!-- <LocationSearch placeholder="Busca una ciudad..." /> -->
    </div>
  </section>

  <!-- Alertas -->
  <section class="alerts-section">
    {weatherData.alerts && weatherData.alerts.length > 0 ? (
      weatherData.alerts.map((alert: any) => (
        <AlertBanner
          type={alert.severity === 'critical' ? 'error' : 'warning'}
          title={alert.type === 'HIGH_WIND' ? 'Viento Fuerte' : 
                 alert.type === 'HEAVY_RAIN' ? 'Lluvia Intensa' : 
                 alert.type === 'EXTREME_HEAT' ? 'Calor Extremo' : 
                 'Alerta Meteorol√≥gica'}
          message={alert.message}
          dismissible={true}
        />
      ))
    ) : (
      <AlertBanner
        type="success"
        title="Sin riesgos"
        message="No hay alertas activas en este momento."
        dismissible={false}
      />
    )}
  </section>

  <!-- Clima Actual -->
  <section class="current-section">
    <CurrentWeather
      temperature={weatherData.current.temperature}
      description={weatherData.current.description}
      humidity={weatherData.current.humidity}
      windSpeed={weatherData.current.windSpeed}
      feelsLike={weatherData.current.feelsLike}
    />
  </section>

  <!-- Pron√≥stico por Horas -->
  <section class="hourly-section">
    <h3>Pr√≥ximas 24 Horas</h3>
    <div class="hourly-scroller">
      {weatherData.hourly && weatherData.hourly.map((hour: any) => (
        <HourlyForecast
          time={hour.time}
          temperature={hour.temperature}
          precipitation={hour.precipitation}
          description={hour.description}
        />
      ))}
    </div>
  </section>

  <!-- Pron√≥stico -->
  <section class="forecast-section">
    <div class="section-header">
      <h2>Pron√≥stico de 7 d√≠as</h2>
      <p class="section-subtitle">Perspectiva completa del tiempo</p>
    </div>
    
    <div class="forecast-grid">
      {weatherData.forecast.map((day: any) => (
        <ForecastCard
          date={day.date}
          tempMax={day.tempMax}
          tempMin={day.tempMin}
          precipitation={day.precipitation}
          description={day.description}
        />
      ))}
    </div>
  </section>

  <!-- Info Adicional -->
  <section class="info-section">
    <div class="info-grid">
      <div class="info-card">
        <h3 class="info-card__title">Consejos</h3>
        <ul class="info-card__list">
          <li>‚úÖ Buen d√≠a para actividades al aire libre</li>
          <li>‚òÇÔ∏è Recuerda llevar paraguas ma√±ana</li>
          <li>üëï Vistete en capas para cambios de temperatura</li>
        </ul>
      </div>
      
      <div class="info-card">
        <h3 class="info-card__title">Fuentes</h3>
        <p>Datos meteorol√≥gicos proporcionados por Open-Meteo, una API p√∫blica gratuita.</p>
        <a href="https://open-meteo.com/" target="_blank" rel="noopener">Visitar Open-Meteo ‚Üí</a>
      </div>
    </div>
  </section>
</Layout>

