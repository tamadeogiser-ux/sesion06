---
/**
 * Layout Base
 * 
 * Estructura principal de todas las p√°ginas
 * - Header sticky
 * - Main content
 * - Footer
 * - Estilos globales
 */

import Header from '../components/Header.astro';
import '../styles/global.css';
import '../styles/hourly.css';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Weather App',
  description = 'Informaci√≥n meteorol√≥gica en tiempo real'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description" content={description} />
  <title>{title} - Weather</title>
  
  <!-- Preconnect -->
  <link rel="preconnect" href="https://api.open-meteo.com" />
  
  <!-- Favicon emoji -->
  <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><text y='75' font-size='75'>üå§Ô∏è</text></svg>" />
</head>
<body>
  <Header title="Weather" />
  
  <main class="layout-main">
    <div class="layout-container">
      <slot />
    </div>
  </main>
  
  <footer class="layout-footer">
    <div class="layout-container">
      <p>&copy; 2025 Weather App. Datos de <a href="https://open-meteo.com/" target="_blank" rel="noopener">Open-Meteo</a></p>
    </div>
  </footer>
</body>
</html>

<style is:global>
  /* Importar estilos globales */
  @import '../styles/global.css';
</style>

<style>
  .layout-main {
    flex: 1;
    min-height: calc(100vh - 4rem - 4rem);
    padding: var(--space-xl) var(--space-md);
    background-color: var(--color-bg-primary);
  }
  
  .layout-container {
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .layout-footer {
    background-color: var(--color-bg-secondary);
    border-top: 1px solid var(--color-border);
    padding: var(--space-lg) var(--space-md);
    text-align: center;
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }
  
  .layout-footer a {
    color: var(--color-info);
    text-decoration: underline;
  }
  
  .layout-footer a:hover {
    opacity: 0.8;
  }
  
  html {
    height: 100%;
  }
  
  body {
    display: flex;
    flex-direction: column;
    min-height: 100%;
  }
  
  @media (max-width: 768px) {
    .layout-main {
      padding: var(--space-lg) var(--space-md);
      min-height: calc(100vh - 3.5rem - auto);
    }
    
    .layout-container {
      max-width: 100%;
    }
  }
</style>
