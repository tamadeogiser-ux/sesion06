# Configuración de Ejemplo
# Copia a .env y personaliza según sea necesario

# Logging
LOG_LEVEL=info
DEBUG=false

# API Open-Meteo
OPENMETEO_BASE_URL=https://api.open-meteo.com/v1/forecast
OPENMETEO_TIMEOUT_MS=10000
OPENMETEO_MAX_RETRIES=2

# Caché
CACHE_TTL_SECONDS=600
CACHE_TYPE=memory

# Ubicaciones por defecto
DEFAULT_LATITUDE=40.4168
DEFAULT_LONGITUDE=-3.7038
DEFAULT_TIMEZONE=Europe/Madrid

# Alertas
ALERT_MAX_WIND_KMH=50
ALERT_MIN_TEMPERATURE=0
ALERT_MAX_TEMPERATURE=35
ALERT_MIN_PRECIPITATION=10
